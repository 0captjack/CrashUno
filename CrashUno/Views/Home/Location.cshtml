@{
    ViewData["Title"] = "Locations";
}

@model LocationViewModel
    <br />
    <br />
    <br />
    <br />

    <h1>@ViewData["Title"]</h1>

    <div class="container">
        <div class="row">
            <div class="col-3">
                <form asp-controller="Home" asp-action="Location">
                    <p>
                        Search by City: <input type="text" name="searchString" />
                        <input type="submit" value="Find" />
                    </p>
                </form>
            </div>

            <div class="col-9">
                @foreach (Location l in Model.Location)
                {
                    <div class="card card-outline-primary m-1 p-1">

                        <ul>
                            <li>Location ID: @l.loc_id</li>
                            <li>Road Name: @l.main_road_name </li>
                            <li>City: @l.city</li>
                            <li>County: @l.county</li>

                        </ul>

                        <br />
                    </div>
                }
            </div>
        </div>
    </div>

